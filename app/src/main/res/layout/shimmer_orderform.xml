<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEFEFE">


    <LinearLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_bg_color">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_12"
            android:src="@drawable/ic_baseline_account_circle_24_white" />

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingVertical="@dimen/dp_8"
            android:text="Order Form"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_12">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addedItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="6dp"
        android:drawablePadding="@dimen/dp_10"
        android:singleLine="true"
        android:cursorVisible="false"
        android:layout_below="@id/titleBarLayout"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:hint="Search item..."
        android:layout_marginBottom="@dimen/dp_10"/>

    <View
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@drawable/bg_shimmer"
        android:layout_below="@id/search_bar"/>

    <View
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@drawable/bg_shimmer"
        android:layout_below="@id/item1"/>

    <View
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@drawable/bg_shimmer"
        android:layout_below="@id/item2"/>

    <View
        android:id="@+id/item4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@drawable/bg_shimmer"
        android:layout_below="@id/item3"/>

    <View
        android:id="@+id/item5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@drawable/bg_shimmer"
        android:layout_below="@id/item4"/>




</RelativeLayout>